@inject UserManager<AppUser> UserManager
<div id="modal-detail" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Chi tiết Hóa đơn: #<a id="BillId"></a></h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group">
                            <input type="hidden" id="hidId" value="0" />
                            <input type="hidden" id="customerId" value="0" />
                            <input type="hidden" id="userId" value="@UserManager.GetUserId(User)" />
                            <label for="txtCustomerName" class="col-sm-2 control-label ">Tên khách hàng</label>
                            <div class="col-sm-10">
                                <input type="text" readonly name="txtCustomerName" class="form-control" id="txtCustomerName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCustomerEmail" class="col-sm-2 control-label ">Email</label>
                            <div class="col-sm-10">
                                <input type="text" readonly name="txtCustomerEmail" class="form-control" id="txtCustomerEmail" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCustomerAddress" class="col-sm-2 control-label ">Địa chỉ</label>
                            <div class="col-sm-10">
                                <input type="text" readonly name="txtCustomerAddress" class="form-control" id="txtCustomerAddress" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCustomerMobile" class="col-sm-2 control-label ">Số điện thoại</label>
                            <div class="col-sm-10">
                                <input type="text" readonly name="txtCustomerMobile" class="form-control" id="txtCustomerMobile" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtCustomerMessage" class="col-sm-2 control-label ">Ghi chú</label>
                            <div class="col-sm-10">
                                <input type="text" readonly name="txtCustomerMessage" class="form-control" id="txtCustomerMessage" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label ">Phương thức thanh toán</label>
                            <div class="col-sm-10">
                                <select id="ddlPaymentMethod" readonly disabled class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label f class="col-sm-2 control-label ">Trạng thái </label>
                            <div class="col-sm-10">
                                <select id="ddlBillStatus" readonly disabled class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label ">Chi tiết </label>
                            <div class="col-sm-10">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tour</th>
                                            <th style="width:20%">Số lượng</th>
                                            <td>Giá</td>
                                            <td>Tổng</td>
                                        </tr>
                                    </thead>
                                    <tbody id="tbl-bill-details"></tbody>
                                </table>
                                <script type="x-tmpl-mustache" id="template-table-bill-details">
                                    <tr data-id="{{Id}}">
                                        <td>{{{Tours}}}</td>
                                        <td><input type="number" readonly class="form-control" value="{{Quantity}}" /></td>
                                        <td><input type="text" readonly class="form-control" value="{{{Price}}}" /></td>
                                        <td><input type="text" readonly class="form-control" value="{{{SubTotal}}}" /></td> 
                                    </tr>
                                </script>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="btnPDF" class="btn btn-primary">In PDF Hóa đơn</button>
                    <button type="button" id="btnExport" class="btn btn-primary">Xuất file Excel</button>

                    <button type="button" data-dismiss="modal" class="btn btn-danger">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>