@using Microsoft.AspNetCore.Identity
@using Travel.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown user-dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle"></i></a>
                <ul class="dropdown-menu">
                    <li><a href="#">@UserManager.GetUserName(User)</a></li>
                    <li><a href="#">Cài đặt tài khoản</a></li>
                    <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Đăng xuất</button></li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
</ul>
}